<Application
    x:Class="MH4U_Database.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MH4U_Database.Controls"
    xmlns:local="using:MH4U_Database">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <!--By default, just use the phones background color-->
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="SubtleBackgroundBrush" Color="{ThemeResource PhoneBackgroundColor}"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="SubtleBackgroundBrush" Color="#FFE2E2E2"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="SubtleBackgroundBrush" Color="#FF1B1B1B"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
